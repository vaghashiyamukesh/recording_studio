<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Room number</th>
      <th>Session start</th>
      <th>Session end</th>
      <th>Session count</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.room_number %></td>

        <td><%= booking.session_start %></td>
        <td><%= booking.session_end %></td>
        <td><% if can? :read, booking %>
          <%= link_to 'Show', booking %>
          <% end %>
        </td>

        <td><% if can? :update, booking %>
          <%= link_to 'Edit', edit_booking_path(booking) %>
          <% end %></td>

        <td><% if can? :destroy, booking %>
          <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

